<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_valve_adv_mode"
    android:layout_margin="@dimen/marginSmall"
    android:padding="@dimen/paddingMeduim"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.ve.irrigation.customview.CustomTextViewLight
        style="@style/AppTextView"
        android:id="@+id/txtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSizeSmall"
        android:text="Machine Name"
        android:layout_marginTop="0dp"
        android:gravity="left"
        android:textColor="@color/colorTextSecondary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txtIpAddress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <com.ve.irrigation.customview.CustomTextViewLight
        style="@style/AppTextView"
        android:id="@+id/txtIpAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSizeSmall"
        android:text="198.162.6.229"
        android:gravity="left"
        android:layout_marginTop="0dp"
        android:textColor="@color/colorTextSecondary"
        app:layout_constraintLeft_toRightOf="@id/txtName"
        app:layout_constraintRight_toLeftOf="@id/txtStatus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.ve.irrigation.customview.CustomTextViewLight
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSizeSmall"
        android:text="Selected"
        android:padding="@dimen/paddingSmall"
        android:textColor="@color/colorTextSecondary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_time_picker_btn"
        />
</android.support.constraint.ConstraintLayout>
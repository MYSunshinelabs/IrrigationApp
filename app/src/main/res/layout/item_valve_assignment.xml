<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/paddingMeduim"
    android:layout_marginTop="@dimen/marginMeduim"
    android:gravity="center_vertical"
    tools:context="com.ve.irrigation.irrigation.activities.ValveAssignmentActivity"
    android:background="@drawable/bg_detail_container">

    <com.ve.irrigation.customview.CustomTextViewLight
        android:id="@+id/txtValve"
        android:textColor="@color/white"
        android:text="valve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginMeduim"
        android:layout_centerVertical="true"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/marginLarge"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rdoGroup1"
                android:text="Group 1"
                android:visibility="gone"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <RadioButton
                android:id="@+id/rdoGroup2"
                android:text="Group 2"
                android:visibility="gone"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <RadioButton
                android:id="@+id/rdoGroup3"
                android:text="Group 3"
                android:visibility="gone"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <RadioButton
                android:id="@+id/rdoGroup4"
                android:text="Group 4"
                android:visibility="gone"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <RadioButton
                android:id="@+id/rdoGroup5"
                android:text="Group 5"
                android:visibility="gone"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <RadioButton
                android:id="@+id/rdoGroup6"
                android:text="Group 6"
                android:visibility="gone"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <RadioButton
                android:id="@+id/rdoGroup7"
                android:text="Group 7"
                android:visibility="gone"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <RadioButton
                android:id="@+id/rdoGroup8"
                android:text="Group 8"
                android:visibility="gone"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RadioGroup>
    </HorizontalScrollView>

</LinearLayout>

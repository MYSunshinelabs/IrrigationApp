<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data >
        <variable
            name="schedule"
            type="com.ve.irrigation.datavalues.Schedule"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--Schedule one UI -->
        <TextView
            style="@style/AppTextView"
            android:id="@+id/txtSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule"
            android:background="@drawable/round_corner_bg_text_green"
            />

        <LinearLayout
            android:id="@+id/lytScheduleOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="right"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    style="@style/AppTextView"
                    android:id="@+id/txtStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{schedule.startTime}"
                    android:background="@drawable/round_corner_bg_text_green"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/AppTextView"
                        android:id="@+id/txtMinutes"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@{schedule.minutes}"
                        android:background="@drawable/round_corner_bg_text_green"
                        android:layout_marginRight="@dimen/marginMeduim"
                        />
                    <TextView
                        style="@style/AppTextView"
                        android:id="@+id/txtVolume"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@{schedule.volume}"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_corner_bg_text_green"
                        />
                </LinearLayout>

                <TextView
                    style="@style/AppTextView"
                    android:id="@+id/txtStopTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{schedule.stopTime}"
                    android:background="@drawable/round_corner_bg_text_green"
                    />
                <TextView
                    style="@style/AppTextView"
                    android:id="@+id/txtDisable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disable"
                    android:background="@drawable/round_corner_bg_text_green"
                    />
                <TextView
                    style="@style/AppTextView"
                    android:id="@+id/txtDisableToday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disable_today"
                    android:background="@drawable/round_corner_bg_text_green"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>